{
    "path": "[/]",
    "routes": [
        {
            "path": "<controller,cms>/<type,*+>/<action,*+>/<id,#+>.<ext,*+>",
            "values": {
                "controller": "<controller>",
                "action": "<action>"
            }
        },
        {
            "path": "<controller,*+>/",
            "routes": [
                {
                    "path": "<action,*+>",
                    "values": {
                        "controller": "<controller>",
                        "action": "<action>"
                    }
                }
            ]
        },
        {
            "path": "<action,@+>",
            "values": {
                "controller": "main",
                "action": "<action>"
            }
        }
    ],
    "values": {
        "controller": "main",
        "action": "index"
    }
}
